{
  "name": "mumbaihacks",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "next": "15.5.4",
      "zod": "^4.0.2",
      "@trpc/server": "^11.5.0",
      "@trpc/client": "^11.5.0",
      "better-auth": "1.3.23",
      "dotenv": "^17.2.2",
      "tsdown": "^0.15.5",
      "drizzle-orm": "^0.44.6"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "db:push": "turbo -F @mumbaihacks/db db:push",
    "db:studio": "turbo -F @mumbaihacks/db db:studio",
    "db:generate": "turbo -F @mumbaihacks/db db:generate",
    "db:migrate": "turbo -F @mumbaihacks/db db:migrate"
